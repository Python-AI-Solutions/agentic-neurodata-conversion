# DataLad Configuration for ETL Directory
# This file provides configuration settings for DataLad integration

[datalad "dataset"]
    # Default configuration for ETL datasets
    id = etl-agentic-neurodata-conversion

[annex]
    # Git-annex backend for large files
    backend = SHA256E

    # Minimum file size for annexing (10MB)
    largefiles = ((mimeencoding=binary)and(largerthan=10MB))

[datalad "locations"]
    # Default locations for different data types
    input-data = etl/input-data
    workflows = etl/workflows
    evaluation-data = etl/evaluation-data

[datalad "metadata"]
    # Metadata extraction configuration
    nativetype = metalad_core
    nativetype = metalad_annex

[remote "gin"]
    # GIN (G-Node Infrastructure) remote configuration
    # This would be configured per-dataset
    url = https://gin.g-node.org/

[filter "annex"]
    # File filtering for git-annex
    clean = git-annex smudge --clean %f
    smudge = git-annex smudge %f

[datalad "run"]
    # Default run configuration for provenance tracking
    substitutions = true
    explicit = true
