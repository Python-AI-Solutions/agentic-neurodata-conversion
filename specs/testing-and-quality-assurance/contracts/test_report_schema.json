{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Test Report Schema",
  "description": "Schema for test execution reports",
  "type": "object",
  "required": [
    "id",
    "report_type",
    "started_at",
    "completed_at",
    "total_tests",
    "passed_tests",
    "failed_tests"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "report_type": {
      "type": "string",
      "enum": ["unit", "integration", "e2e", "performance", "full"]
    },
    "name": { "type": "string" },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time"
    },
    "duration_seconds": {
      "type": "number",
      "minimum": 0
    },
    "environment": {
      "type": "object",
      "properties": {
        "python_version": { "type": "string" },
        "os_platform": { "type": "string" },
        "git_commit": { "type": "string" },
        "git_branch": { "type": "string" }
      }
    },
    "total_tests": {
      "type": "integer",
      "minimum": 0
    },
    "passed_tests": {
      "type": "integer",
      "minimum": 0
    },
    "failed_tests": {
      "type": "integer",
      "minimum": 0
    },
    "skipped_tests": {
      "type": "integer",
      "minimum": 0
    },
    "error_tests": {
      "type": "integer",
      "minimum": 0
    },
    "flaky_tests": {
      "type": "array",
      "items": { "type": "string" }
    },
    "coverage": {
      "type": "object",
      "properties": {
        "line_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "branch_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "path_coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "failures": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "test_id": { "type": "string" },
          "test_name": { "type": "string" },
          "failure_message": { "type": "string" },
          "stack_trace": { "type": "string" },
          "failure_type": { "type": "string" }
        }
      }
    }
  }
}
