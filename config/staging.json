{
  "environment": "staging",
  "debug": false,
  "data_directory": "/var/lib/agentic-neurodata-conversion/staging/data",
  "temp_directory": "/tmp/agentic-neurodata-conversion-staging",
  "max_file_size_mb": 2000,
  "agents": {
    "timeout_seconds": 450,
    "max_retries": 4,
    "retry_delay_seconds": 1.5,
    "max_concurrent_tasks": 8,
    "memory_limit_mb": 2048,
    "enable_caching": true,
    "cache_ttl_seconds": 5400
  },
  "tools": {
    "default_timeout_seconds": 180,
    "max_concurrent_executions": 15,
    "enable_metrics": true,
    "metrics_retention_days": 60
  },
  "sessions": {
    "max_active_sessions": 200,
    "session_timeout_minutes": 90,
    "cleanup_interval_minutes": 8,
    "enable_persistence": true,
    "persistence_path": "/var/lib/agentic-neurodata-conversion/staging/sessions",
    "max_session_history": 2000
  },
  "logging": {
    "level": "INFO",
    "enable_file_logging": true,
    "log_file_path": "/var/log/agentic-neurodata-conversion/staging.log",
    "max_log_file_size_mb": 200,
    "log_file_backup_count": 7,
    "enable_structured_logging": true,
    "log_correlation_id": true
  },
  "security": {
    "enable_authentication": true,
    "api_key_header": "X-API-Key",
    "allowed_origins": ["https://staging.your-domain.com"],
    "rate_limit_requests_per_minute": 500,
    "enable_request_validation": true,
    "max_request_size_mb": 200,
    "enable_cors": true
  },
  "performance": {
    "enable_async_processing": true,
    "worker_pool_size": 6,
    "queue_max_size": 2000,
    "enable_compression": true,
    "cache_size_mb": 512,
    "enable_profiling": true,
    "profiling_sample_rate": 0.01
  },
  "http": {
    "host": "0.0.0.0",
    "port": 8000,
    "enable_websockets": true,
    "enable_openapi": true,
    "enable_metrics_endpoint": true,
    "enable_request_logging": true,
    "cors_allow_credentials": false
  },
  "mcp": {
    "transport_type": "socket",
    "socket_path": "/var/run/agentic-neurodata-conversion/staging-mcp.sock",
    "enable_heartbeat": true,
    "heartbeat_interval_seconds": 20,
    "max_message_size_kb": 1536,
    "enable_message_compression": true
  }
}